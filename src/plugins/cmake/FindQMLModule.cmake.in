include(ECMFindModuleHelpersStub)

execute_process(COMMAND qmlplugindump "@MODULE_NAME@" "@VERSION@" ERROR_VARIABLE ERRORS_OUTPUT OUTPUT_VARIABLE DISREGARD_VARIABLE RESULT_VARIABLE ExitCode)

if(ExitCode EQUAL 0)
    set(@GENMODULE@_FOUND TRUE)
    set(@GENMODULE@_VERSION "${PACKAGE_FIND_VERSION}")
else()
    message(STATUS "qmlplugindump failed for @MODULE_NAME@.")
    set(@GENMODULE@_FOUND FALSE)
endif()

find_package_handle_standard_args(@GENMODULE@
    FOUND_VAR
        @GENMODULE@_FOUND
    REQUIRED_VARS
        @GENMODULE@_FOUND
    VERSION_VAR
        @GENMODULE@_VERSION
    HANDLE_COMPONENTS
)


